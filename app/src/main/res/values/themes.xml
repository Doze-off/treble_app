<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TrebleApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/inter</item>

        <!-- Usa o fundo dinâmico do sistema (Monet) -->
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar igual à status bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Preferências -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.TrebleApp</item>
    </style>

    <style name="PreferenceThemeOverlay.TrebleApp" parent="PreferenceThemeOverlay">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listDivider">@null</item>
    </style>
</resources>
