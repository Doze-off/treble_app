<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_preference_item"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@android:id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.CustomTitle"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="0dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@android:id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.CustomSummary"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingTop="2dp"
                android:lineSpacingExtra="0dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="34dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_switch_container"
            android:padding="4dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@android:id/switch_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:trackTint="?attr/colorSurface"
                app:thumbTint="?attr/colorPrimary"
                android:focusable="false"
                android:clickable="false" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
