<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_display"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_asus_glove_mode"
            android:title="@string/title_glove_mode" />

        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_asus_dt2w"
            android:title="@string/title_dt2w" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_misc_asus"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="true"
            android:key="key_asus_fp_wake"
            android:title="@string/title_fp_wake" />

        <ListPreference
            android:layout="@layout/preference_list_custom"
            android:defaultValue="-1"
            android:entries="@array/pref_asus_usb_port_picker"
            android:entryValues="@array/pref_asus_usb_port_picker_values"
            android:key="key_asus_usb_port_picker"
            android:summary="@string/summary_usb_port_picker"
            android:title="@string/title_usb_port_picker" />
    </PreferenceCategory>

</PreferenceScreen>
