<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="DISPLAY"
        android:layout="@layout/preference_category_custom">
	    <ListPreference
            android:layout="@layout/preference_list_custom"
            android:defaultValue="default"
            android:entries="@array/pref_oneplus_display_mode"
            android:entryValues="@array/pref_oneplus_display_mode_values"
            android:key="key_oneplus_display_mode"
            android:title="Display Mode" />
        <ListPreference
            android:layout="@layout/preference_list_custom"
            android:defaultValue="0"
            android:entries="@array/pref_oneplus_display_high_brightness"
            android:entryValues="@array/pref_oneplus_display_high_brightness_values"
            android:key="key_oneplus_display_high_brightness"
            android:title="High brightness mode" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="MISCELLANEOUS"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_oneplus_usb_otg"
            android:title="Enable USB OTG" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_oneplus_double_tap_to_wake"
            android:title="Enable DT2W" />
    </PreferenceCategory>

</PreferenceScreen>
