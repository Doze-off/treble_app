<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Preference
            android:title="Debug sensors" android:summary="Are you working?"
            android:layout="@layout/preference_custom">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetPackage="me.phh.treble.app"
                android:targetClass="me.phh.treble.app.DebugSensors" />
        </Preference>

        <Preference
            android:layout="@layout/preference_custom"
            android:key="key_debug_restart_app"
            android:title="Kill TrebleApp"
            android:summary="To save a few taps" />

        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_debug_debuggable_mode"
            android:title="Set debuggable mode"
            android:summary="Toggle insecure adb and related" />

</PreferenceScreen>
