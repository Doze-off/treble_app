<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="TOUCHSCREEN"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_oppo_double_tap_to_wake"
            android:title="Enable DT2W" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_oppo_ts_game_mode"
            android:title="Enable game mode" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="MISCELLANEOUS"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_oppo_usb_otg"
            android:title="Enable USB OTG" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_oppo_dc_diming"
            android:title="Enable DC Diming" />
    </PreferenceCategory>

</PreferenceScreen>
